extends layout

block content
  header#gallery
    div.text-container
      p.visible-md.visible-lg Gallery
  section#display
    .container-fluid
      - var index = 0
      - var items = pageContent.length
      - var semi = items % 3
      - while (items % 3 !== 0)
        - items -= 1;
      - for (var i = 0; i < items; i+=3)
          .row
            - for (var j = i; j <= i + 2; j++)
              - index++
                article.col-lg-4.col-sm-12
                  img.img-responsive(src=pageContent[index-1].PROJECT.Image)
                  aside
      - if (semi > 0)
        .row
          - for (var remainder = index; index < remainder + semi; index++)
            article.col-lg-4.col-md-6.col-sm-12
              img.img-responsive(src=pageContent[index].PROJECT.Image)
              aside