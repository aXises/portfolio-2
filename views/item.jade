extends layout

block content
  - var item = pageContent[itemID.toUpperCase()]
  section#project
    .bg
      .overlay
      img(src=item.Image)
    .row.item-container
      .container-fluid
          .col-lg-5.col-lg-offset-1
            aside
              img.img-responsive(src=item.Image)
          .col-lg-5
            article
              .row
                .col-lg-12.col-md-12
                  h1 #{item.Name}
                .col-lg-7.col-md-12
                  .container-fluid
                    .row
                      p#date: i #{item.Date}
                      a(href="https://"+item.Link) #{item.Link}
                    .row
                      p #{item.Description}
                .col-lg-5.col-md-12
                  .container-fluid
                    .row.status
                      .row
                        .col-lg-6.col-md-12
                          p: strong Status: #{item.Status}
                        .col-lg-6.col-md-6.visible-lg.indicator
                          div.blue
                      .row
                        .col-lg-6.col-md-12
                          p: strong Type: #{item.Type}
                        .col-lg-6.col-md-6.visible-lg.indicator
                          div.blue
                      .row
                        .col-lg-6.col-md-12
                          p: strong Parent: #{item.Parent}
                        .col-lg-6.col-md-6.visible-lg.indicator
                          div.red
                      .row
                        hr
                        p Technologies:
                        ul#tech-list
                          p.visible-lg Main
                          p.visible-lg Support
                      .row
                        hr
                        p Team:
                        ul#team







