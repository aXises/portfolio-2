doctype html
html
  head
    meta(charset="utf-8")
    meta(name="author" content="Xinyi Li")
    meta(http-equiv="X-UA-Compatible", content="IE=edge")
    meta(name="description", content="Portfolio-2")
    meta(name="viewport", content="width=device-width, initial-scale=1")
    title= title
    link(href="https://fonts.googleapis.com/css?family=Lato|Muli:300,300i,400,700" rel="stylesheet")
    link(rel="stylesheet", type="text/css", href="/stylesheets/style.min.css")
    link(rel="icon" href="/images/favicon.ico")
    link(rel="apple-touch-icon" sizes="180x180" href="/images/apple-touch-icon.png")
    link(rel="icon" type="image/png" sizes="32x32" href="/images/favicon-32x32.png")
    link(rel="icon" type="image/png" sizes="16x16" href="/images/favicon-16x16.png")
    link(rel="manifest" href="/images/manifest.json")
    meta(name="theme-color" content="#ffffff")
    script(type="text/javascript" src="/bower_components/jquery/dist/jquery.min.js")
  body
    div#loader
      .elem-container
        .text-main
          h1 AXISESIO
        .spinnerContainer
          .block
          .spinner.top
          .spinner.bot
        .progress-text
          p.percentage
        .failed
    .navtoggle
      i.ion-navicon.default
      i.ion-ios-arrow-back.back.disable
    .home
      a(href="/")
        img(src="/images/Home.png")
    nav#globalnav
      .followBar.hidden-xs.hidden-sm
      .buttonContainer
        - var links = [['About', 'about'], ['Portfolio', 'portfolio'], ['Design Blogs', 'designblogs'], ['Shop', 'shop'], ['Contact', 'contact']]
        each link in links
          a(href=link[1])
            h6 #{link[0]}
        .divider.hidden-xs.hidden-sm
        .externalSites.hidden-xs.hidden-sm
          a.ext(href='')
            i.ion-social-github
          a.ext(href='')
            i.ion-social-linkedin
          a.ext(href='')
            i.ion-social-facebook
    block content
    script(type="text/javascript" src="/bower_components/move.js/move.min.js")
    script(type="text/javascript" src="/bower_components/imagesloaded/imagesloaded.pkgd.min.js")
    script(type="text/javascript" src="/bower_components/rowGrid.js/jquery.row-grid.min.js")
    script(type="text/javascript" src="/bower_components/particles.js/particles.min.js")
    script(type="text/javascript" src="/javascripts/script.min.js")