extends layout

block content
  #portfolio
    nav
      .selection.container-fluid
        .row
          button.sw Selected Works
        .row
          button.va View All
    #selectedWorks
      - var infos = ['Type', 'Status', 'Technologies']
      .container-fluid
        each collection in selectedCollections
          .row.work
            <img src=#{collection.image} />
            .container.info
              p=collection.description
              .container-fluid
                h5 Project Info
                each info in infos
                  +Info(info + ' :', collection[info.toLowerCase()])
            .name
              h1=collection.name
              h5=collection.for + ' '+ collection.date

  mixin Info(title, desc)
    .row
      .col-lg-4
        p=title
      - if(typeof(desc) == 'object')
        .col-lg-8
          each elem in desc
            p=elem
      - else
        .col-lg-8
          p=desc